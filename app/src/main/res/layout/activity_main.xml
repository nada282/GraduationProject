<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:background="@color/white"
            android:layout_marginTop="750dp"
            app:menu="@menu/bottom_nav"


            />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"


        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="38dp"
                android:layout_height="30dp"
                android:contentDescription="app-name"
                android:src="@drawable/ic_baseline_menu_24"
                android:tint="@color/white"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حولينا"
                android:textColor="@color/white"
                android:textSize="33dp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/title"
                android:text="search"

                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="00dp"
                android:onClick="salonclick"

                >

                <LinearLayout
                    android:layout_width="188dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="117dp"
                        android:layout_height="119dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:src="@drawable/salon" />

                    <TextView
                        android:id="@+id/Txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Salon"
                        android:textSize="34sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="00dp"
                android:onClick="superMarketclick"
                >

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/Image2"
                        android:layout_width="117dp"
                        android:layout_height="119dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:src="@drawable/market" />

                    <TextView
                        android:id="@+id/Txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Supermarket"
                        android:textSize="34sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="830dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="00dp"
                android:onClick="DryCleanClick"
                >

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="117dp"
                        android:layout_height="119dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:src="@drawable/dry" />

                    <TextView
                        android:id="@+id/Txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="DryClean"
                        android:textSize="34sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="00dp"
                android:onClick="ResturantClick"
                >

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="193dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/Image4"
                        android:layout_width="117dp"
                        android:layout_height="119dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:src="@drawable/resturant" />

                    <TextView
                        android:id="@+id/Txt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Resturant"
                        android:textSize="34sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="430dp"
            android:layout_height="1030dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:onClick="DormsClick"
            >

            <LinearLayout
                android:layout_width="196dp"
                android:layout_height="193dp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="117dp"
                    android:layout_height="119dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/dorms" />

                <TextView
                    android:id="@+id/Txt5"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Dorms(سكنات)"
                    android:textSize="30sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>









